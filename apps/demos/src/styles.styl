/* GLOBALS */
body, html {
  height: 100%;
}

body {
  font-family: 'Open Sans',sans-serif;
}

app-root {
  display: block;
  height: 100%;
}

h1, h2, h3, h4, h5, h6 {
  font-weight: 700;
  margin-bottom: 10px;
}

h2 {
  color: #0a253a;
  font-family: Poppins,sans-serif;
  margin-top: 20px;
  margin-bottom: 10px;
  font-size: 32px;
  font-weight: 600;
  line-height: 36px;
}

p {
  color: #485c6c;
  font-size: 17px;
  line-height: 175%;
  margin-top: 16px;
  margin-bottom: 16px;
}

/* LAYOUT */
.w-container {
  margin-left: auto;
  margin-right: auto;
  max-width: 940px;
}
